<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
	<!-- This file was copied from test resources -->

	<appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss,SSS} %5p %c - %m%n"/>
		</layout>
	</appender>

	<appender name="SecuredObjectsAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="time=&quot;%d{yyyy-MM-dd HH:mm:ss,SSS Z}&quot;, thread=%t, priority=%p, %m%n"/>
		</layout>
	</appender>

	<logger name="SecuredObjectsLogger" additivity="false">
		<level value="INFO"/>
		<appender-ref ref="SecuredObjectsAppender"/>
	</logger>

	<category name="no">
		<level value="DEBUG"/>
	</category>

	<root>
		<level value="WARN"/>
		<appender-ref ref="consoleAppender"/>
	</root>
</log4j:configuration>
